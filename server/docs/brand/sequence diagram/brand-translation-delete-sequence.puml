@startuml Brand Translation - Delete Sequence
!theme plain
skinparam backgroundColor #FFFFFF
skinparam sequenceArrowThickness 2
skinparam roundcorner 16

title Chi Tiết Luồng DELETE /brand-translations/:brandTranslationId

actor "User" as U
participant "BrandTranslationController" as BTC
participant "ActiveUser" as AU
participant "BrandTranslationService" as BTS
participant "BrandTranslationRepo" as BTR
participant "I18nService" as IS
database "PostgreSQL (Prisma)" as DB

U -> BTC: DELETE /brand-translations/:brandTranslationId
activate BTC

BTC -> AU: @ActiveUser()
AU --> BTC: user

BTC -> BTS: delete({ id, user })
activate BTS

BTS -> BTR: delete({ id, deletedById: user.userId })
activate BTR
BTR -> DB: brandTranslation.update({ where: { id, deletedAt: null }, data: { deletedAt: now, deletedById } })
DB --> BTR: ok | NotFound
BTR --> BTS: ok | error
deactivate BTR

alt NotFound
  BTS --> BTC: NotFoundRecordException (404)
  BTC --> U: 404 Not Found
  deactivate BTS
  deactivate BTC
  stop
end

BTS -> IS: t('brand.brandTranslation.success.DELETE_SUCCESS')
IS --> BTS: message
BTS --> BTC: { message }
deactivate BTS

BTC --> U: 200 OK + JSON
deactivate BTC

@enduml


