{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Shopsifu Debug",
      "args": [
        "${workspaceFolder}/src/main.ts"
      ],
      // "runtimeArgs": [
      //   "--nolazy",
      //   "-r",
      //   "ts-node/register",
      //   "-r",
      //   "tsconfig-paths/register"
      // ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "run",
        "debug",
        "--",
        "--inspect-brk"
      ],
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "npm",
    },
  ]
}
