{
  "dashboard": {
    "id": null,
    "title": "VPS System Overview",
    "tags": ["vps", "system", "performance"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage per Core",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by (cpu) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU {{cpu}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "yAxes": [{ "unit": "percent", "min": 0, "max": 100 }]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "yAxes": [{ "unit": "percent", "min": 0, "max": 100 }]
      },
      {
        "id": 3,
        "title": "System Load Average",
        "type": "graph",
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1 min"
          },
          {
            "expr": "node_load5",
            "legendFormat": "5 min"
          },
          {
            "expr": "node_load15",
            "legendFormat": "15 min"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Disk I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(node_disk_io_time_seconds_total[5m])",
            "legendFormat": "{{device}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 5,
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[5m])",
            "legendFormat": "{{device}} Receive"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[5m])",
            "legendFormat": "{{device}} Transmit"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 6,
        "title": "Disk Space Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{mountpoint=\"/\"} - node_filesystem_avail_bytes{mountpoint=\"/\"}) / node_filesystem_size_bytes{mountpoint=\"/\"} * 100",
            "legendFormat": "Root Filesystem"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "yAxes": [{ "unit": "percent", "min": 0, "max": 100 }]
      }
    ]
  }
}
